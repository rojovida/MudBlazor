@namespace MudBlazor
@using MudBlazor.Charts
@inherits MudTimeSeriesChartBase

<CascadingValue Value="@this" IsFixed="true">
    <CascadingValue Value="@((MudChartBase)this)" IsFixed="true">
        <div @attributes="UserAttributes" class="@Classname" style="@Style; width: @Width; height: @Height;" dir="ltr">
            <TimeSeries XAxisTitle="@XAxisTitle" 
                        YAxisTitle="@YAxisTitle" 
                        ChartSeries="@ChartSeries" 
                        AxisChartOptions="AxisChartOptions"
                        @bind-SelectedIndex="@SelectedIndex" 
                        TimeLabelSpacing="@TimeLabelSpacing" 
                        TimeLabelSpacingRounding="@TimeLabelSpacingRounding" 
                        TimeLabelSpacingRoundingPadSeries="@TimeLabelSpacingRoundingPadSeries" 
                        TimeLabelFormat="@TimeLabelFormat">
            </TimeSeries>
        </div>
    </CascadingValue>
</CascadingValue>
